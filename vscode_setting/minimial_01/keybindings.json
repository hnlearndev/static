// Place your key bindings in this file to override the defaults
[
    /**
   * File Explorer Panel - additional to default
   **/
  {
    "key": "ctrl+alt-shift", // or your preferred key combo
    "command": "workbench.action.toggleSetting",
    "args": "editor.inlayHints.enabled"
  },

  /**
   * File Explorer Panel - additional to default
   **/
  {
    "key": "ctrl+d",
    "command": "duplicate.execute",
    "when": "explorerViewletVisible && filesExplorerFocus && !explorerResourceIsRoot && !inputFocus"
  },
  {
    "key": "shift+ctrl+n",
    "command": "explorer.newFolder",
    "when": "explorerViewletVisible && filesExplorerFocus && !inputFocus"
  },

  /**
   * Line Manipulation
   **/
  {
    "key": "alt+shift+up",
    "command": "editor.action.copyLinesDownAction",
    "when": "editorTextFocus"
  },
  {
     "key": "alt+shift+down",
    "command": "editor.action.copyLinesUpAction",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+j",
    "command": "editor.action.joinLines",
    "when": "editorTextFocus"
  },

  /**
   * Terminal Split Panel
   **/
  {
    "key": "ctrl+n",
    "command": "workbench.action.terminal.split",
    "when": "terminalFocus"
  },
  {
    "key": "ctrl+l",
    "command": "workbench.action.terminal.focusNextPane",
    "when": "terminalFocus"
  },
  {
    "key": "ctrl+h",
    "command": "workbench.action.terminal.focusPreviousPane",
    "when": "terminalFocus"
  },
  {
    "key": "ctrl+w",
    "command": "workbench.action.terminal.kill",
    "when": "terminalFocus"
  },

  /**
   * Split Panels
   **/
  {
    "key": "ctrl+n",
    "command": "workbench.action.splitEditor",
    "when": "editorFocus"
  },
  {
    "key": "ctrl+l",
    "command": "workbench.action.navigateRight",
    "when": "editorFocus"
  },
  {
    "key": "ctrl+h",
    "command": "workbench.action.navigateLeft",
    "when": "editorFocus"
  },
  {
    "key": "ctrl+w",
    "command": "workbench.action.joinAllGroups",
    "when": "editorFocus"
  },
  {
    "key": "ctrl+shift+alt+f",
    "command": "leptos-fmt.format"
  }
]
